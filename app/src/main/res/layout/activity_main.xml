<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/mainview"
tools:context="com.brianwu.phototest.MainActivity"
    android:background="@color/main_blue">

<FrameLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_searchview">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_search_title"
            android:layout_above="@+id/edit_query"
            android:layout_alignLeft="@+id/edit_query"
            android:layout_alignRight="@+id/edit_query"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_query"
            android:hint="@string/main_edit_hint"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textSize="16sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_search"
            android:text="@string/main_btn_search"
            android:layout_below="@+id/edit_query"
            android:layout_alignLeft="@+id/edit_query"
            android:layout_alignRight="@+id/edit_query"/>
    </RelativeLayout>

</RelativeLayout>
